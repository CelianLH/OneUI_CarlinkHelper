<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalifeAppLauncherSamsung" parent="@style/OneUITheme">
        <!-- Primary brand color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="colorPrimary">@color/OneUI_Primary</item>
        <item name="colorPrimaryVariant">@color/OneUI_Variant</item>
        <item name="colorOnPrimary">@color/OneUI_Button_Text_Color</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/OneUI_Primary</item>
        <item name="colorSecondaryVariant">@color/OneUI_Variant</item>
        <item name="colorOnSecondary">@color/OneUI_Variant</item>

        <!-- Customize your theme here. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/OneUI_BackgroundColor</item>
        <item name="android:windowBackground">@color/OneUI_BackgroundColor</item>
        <item name="android:colorAccent">@color/OneUI_colorAccent</item>
        <item name="android:activatedBackgroundIndicator">@color/OneUI_Variant</item>
        <item name="android:colorControlNormal">@color/OneUI_colorControlNormal</item>
        <item name="android:colorControlActivated">@color/OneUI_colorControlActivated</item>
        <!--点击阴影        <item name="android:colorControlHighlight">@color/OneUI_colorAccent_colorControlHighlight</item>-->



        <item name="android:textColorPrimary">@color/OneUI_Button_Title_TextColor</item>
        <item name="android:textColorSecondary">@color/OneUI_Button_Text_Color</item>

    </style>

    <style name="Theme.CalifeAppLauncherSamsung.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CalifeAppLauncherSamsung.Fullscreen" parent="Theme.CalifeAppLauncherSamsung">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.CalifeAppLauncherSamsung.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.CalifeAppLauncherSamsung.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/OneUI_BackgroundColor</item>
        <item name="fullscreenTextColor">@color/OneUI_BackgroundColor</item>
    </style>

    <style name="Theme.CalifeAppLauncherSamsung.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--    <style name="Theme.CalifeAppLauncherSamsung.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>-->



</resources>