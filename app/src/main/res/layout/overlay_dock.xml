<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dock_root">

    <androidx.cardview.widget.CardView
        android:id="@+id/god_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="6dp"
        android:paddingVertical="12dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="23dp">

        <LinearLayout
            android:id="@+id/dock_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/navi_bg"
            android:orientation="vertical">
            <!--            android:background="#FF373737"-->

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="time"
                android:textAlignment="center"
                android:textColor="@color/time_text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/battery_image"
                    android:paddingLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:visibility="gone"
                    android:textColor="@color/battery_charging_logo_color" />

                <ImageView
                    android:id="@+id/dock_mobile_1"
                    android:paddingLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/dock_mobile_2"
                    android:paddingLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/godmodelist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="6dp"
                android:textAlignment="center" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
